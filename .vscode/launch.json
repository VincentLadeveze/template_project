    "version": "0.2.0",
    "configurations": [        
        
        {
            "name": "(gdb) Launch Template",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/MyTemplate",
            "args": [],
            //"args": [10],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Template debug -- Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}